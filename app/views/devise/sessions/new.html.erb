<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="display-container">
        <h1 style="margin-bottom: 20px"> My Tools </h1>
        <h4>ユーザー：<strong><%= user_number %></strong>名</h4>
        <h4>投稿枚数：<strong><%= photo_number %></strong>枚</h4>
        <!-- サンプル画像(モーダルできる) -->
        <a data-toggle="modal" data-target=".bs-example-modal-lg">
          <%= image_tag('top_image.png', class: "img-responsive") %>
        </a>

        <!-- モーダル -->
        <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h2 class="modal-title" id="myModalLabel">サンプル画像</h2>
              </div>
              <div class="modal-body">
                <img src="/assets/top_image.png" class="img-responsive">
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" style="width: 100px">閉じる</button>
              </div>
            </div>
          </div>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-box" style="margin-top: 20px">
          <%= f.text_field :login, placeholder: 'メールアドレス もしくは ニックネーム', autofocus: true%>
          <%= f.password_field :password, placeholder: 'パスワード', autocomplete: "off" %>
          <%= f.submit 'ログイン', class: 'btn btn-info btn-lg btn-block active' %>
          <%= link_to '会員登録はこちらから', new_user_registration_path, class: 'btn btn-info btn-lg btn-block active' %>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
