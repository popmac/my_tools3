<!DOCTYPE html>
<html>
<head>
  <title>MyTools3</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= "#{controller.controller_name}" %>'>

<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">My Tools</a>
    </div>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-left">
        <% if user_signed_in?  %>
        <li><%= link_to "#{current_user.nickname}さん", users_path, class: 'nav-profile-post'%></li>
        <li><%= link_to 'マイプロフィール', profile_path(current_user.profile.id), class: "nav-profile-post" %></li>
        <li><%= link_to 'スクリーンショットを投稿', new_photo_path, class: "nav-profile-post" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-profile-post" %></li>
        <% end  %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container -->
</nav>

<%= yield %>

</body>
</html>
