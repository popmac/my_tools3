<!DOCTYPE html>
<html>
<head>
  <title>MyTools</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!-- Font Awesome を使用 -->
  <script src="https://use.fontawesome.com/433be774bf.js"></script>
  <meta name="viewport" content="width=device-width,initial-scale=1">
</head>
<!-- コントローラーごとにクラス名が変わる -->
<body class='<%= "#{controller.controller_name}" %> <%= "#{action_name}" %>'>

  <!-- ナビゲーションバー -->
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <!-- ロゴ -->
        <% if user_signed_in?  %>
          <a href="/"><%= image_tag('my-tools-logo.png', class: 'navbar-logo') %></a>
        <% else %>
          <%= image_tag('my-tools-logo.png', class: 'navbar-logo') %>
        <% end %>
      </div>

      <!-- ▼ユーザーがログインしている場合 -->
      <% if user_signed_in?  %>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-left">
            <!-- メニューボタン -->
            <li class="dropdown">
              <a href="#" class="btn btn-primary dropdown-toggle nav-menu" data-toggle="dropdown"><%= current_user.profile.nickname %>さんのMENU<b class="caret"></b></a>
              <!-- メニューの中身 -->
              <ul class="dropdown-menu user-dropdown-menu">
                <li><%= link_to reviews_path do %><span class="glyphicon glyphicon-book glyphicon-user-menu" aria-hidden="true"></span>Review<% end %></li>
                <li class="divider"></li>
                <li><%= link_to user_photos_path(current_user) do %><span class="glyphicon glyphicon-camera glyphicon-user-menu" aria-hidden="true"></span>Photo<% end %></li>
                <li class="divider"></li>
                <li><%= link_to profile_path(current_user.profile.id) do %><span class="glyphicon glyphicon-user glyphicon-user-menu" aria-hidden="true"></span>Profile<% end %></li>
                <li class="divider"></li>
                <li><%= link_to destroy_user_session_path, method: :delete, data: {confirm: "ログアウトしますか？"} do %><span class="glyphicon glyphicon-log-out glyphicon-user-menu" aria-hidden="true"></span>Logout<% end %></li>
              </ul>
            </li>
          </ul>
        </div>
      <% end %>
      <!-- ▲ユーザーがログインしている場合 -->
    </div>
  </nav>

  <!-- フラッシュメッセージ -->
  <div class="container" id="notice">
    <% flash_messages %>
  </div>

  <!-- ビューによって内容が変わる -->
  <%= yield %>

  <footer id="footer">
    <div class="container">
      <p>© 2016 MyTools</p>
    </div>
  </footer>

</body>
</html>
