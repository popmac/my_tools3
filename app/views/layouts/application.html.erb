<!DOCTYPE html>
<html>
<head>
  <title>MyTools</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width,initial-scale=1">
</head>
<!-- コントローラーごとにクラス名が変わる -->
<body class='<%= "#{controller.controller_name}" %>'>

  <!-- ナビゲーションバー -->
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <!-- ロゴ -->
        <a href="/"><%= image_tag('my-tools-logo.png', class: 'navbar-logo') %></a>
      </div>

      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-left">
          <!-- ユーザーがログインしている場合 -->
          <% if user_signed_in?  %>
          <!-- メニューボタン -->
          <li class="dropdown">
            <a href="#" class="btn btn-primary dropdown-toggle nav-menu" data-toggle="dropdown"><%= current_user.profile.nickname %>さんのMENU<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "マイページ", users_path%></li>
              <li class="divider"></li>
              <li><%= link_to 'プロフィール', profile_path(current_user.profile.id)%></li>
              <li class="divider"></li>
              <li><%= link_to 'スクリーンショット', user_photos_path(current_user)%></li>
              <li class="divider"></li>
              <li><%= link_to 'アプリとレビュー', reviews_path %></li>
            </ul>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <!-- ログアウトボタン -->
          <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, data: {confirm: "ログアウトしますか？"}, class: "btn nav-logout" %></li>
        </ul>
          <% end %>
      </div>
    </div>
  </nav>

  <!-- フラッシュメッセージ -->
  <div class="container" id="notice">
    <% flash_messages %>
  </div>

  <!-- ビューによって内容が変わる -->
  <%= yield %>

  <footer id="footer">
    <div class="container">
      <p>© 2016 MyTools</p>
    </div>
  </footer>

</body>
</html>
