<!DOCTYPE html>
<html>
<head>
  <title>MyTools3</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= "#{controller.controller_name}" %>'>

<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">My Tools</a>
    </div>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-left">
        <% if user_signed_in?  %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.nickname %>さん<b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to "マイページ", users_path, class: 'nav-profile-post'%></li>
            <li class="divider"></li>
            <li><%= link_to 'プロフィール', profile_path(current_user.profile.id), class: "nav-profile-post" %></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">スクリーンショット <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to '投稿する', new_user_photo_path(current_user), class: "nav-profile-post" %></li>
            <li class="divider"></li>
            <li><%= link_to '編集する', user_photos_path(current_user), class: "nav-profile-post" %></li>
          </ul>
        </li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "nav-profile-post", data: {confirm: "ログアウトしますか？"} %></li>
        <% end  %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container -->
</nav>

<div class="container" id="notice">
  <% flash_messages %>
</div>

<%= yield %>

</body>
</html>
