<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="display-container">
        <div class="form-box">

          <h2><%= @tool.name %> のレビューを投稿</h2>

          <%= form_for @review do |f| %>
          <div class="field">
            <%= f.label 'オススメ度 (1~100)' %>
            <%= f.number_field :rate, placeholder: '半角数字で入力してください', value: "", max: 100, min: 1, html: { style: 'text-align: right' } %>
            <%= f.label 'レビュー' %><br>
            <%= f.text_area :review, rows: "8", cols: "50", placeholder: "アプリの使い方や設定を書いてください" %>
            <%= hidden_field_tag(:tool_id, @tool.id) %>
          </div>
          <div class="actions">
            <%= f.submit '投稿する', class: 'btn btn-info btn-lg btn-block active', data: { disable_with: "送信中..." } %>
          </div>
          <% end %>

          <%= link_to "#{@tool.name} のレビューの一覧に戻る", tool_path(@tool), class: 'btn btn-info btn-lg btn-block active' %>

        </div>
      </div>
    </div>
  </div>
</div>
