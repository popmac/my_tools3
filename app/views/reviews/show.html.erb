<div class="container">

  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <div class="reviews-show-card">
        <div class="reviews-show-card-title">
        <h3><a href="/users/<%= @review.user_id %>"><%= @review.user.profile.nickname %>さん</a>の<a href="/tools/<%= @review.tool.id %>"><%= @review.tool.name %></a>のレビューの詳細</h3>
        </div>
        <div class="reviews-show-card-content">
          <p><%= @review.review %></p>
          <!-- likeボタン -->
          <div id="review-detail-like-button">
            <%= render partial: "likes/like", locals: { like: @review.likes.find_by(user_id: current_user.id), review: @review } %>
          </div>
        </div>
      </div>

    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <!-- コメント総数の表示 -->
      <div id="comments-number">
        コメント(<%= @review.comments.count %>)
      </div>

      <!-- コメントの表示 -->
      <div id="comments">
        <%= render partial: 'comments/comment', collection: @review.comments %>
      </div>
      <div class="review-comment">
        <p>コメントを入力してください</p>
        <%= form_for [@review, @comment], remote: true do |f| %>
        <%= f.text_area :comment, id: "comment_field" %><br>
        <%= f.submit 'コメントを送信', class: "btn btn-info btn-block btn-lg active" %>
        <% end %>
      </div>
    </div>
  </div>

</div>
