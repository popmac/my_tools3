<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3><%= @review.user.nickname %>さんの<%= @review.tool.name %>のレビューの詳細</h3>
        </div>
        <div class="panel-body">
            <p><%= @review.review %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= link_to 'トップページへ', users_path, class: 'btn btn-info btn-lg btn-block active' %>
      <%= link_to "#{@review.tool.name}のレビューの一覧へ", tool_path(@review.tool_id), class: 'btn btn-info btn-lg btn-block active' %>
    </div>
  </div>
</div>
