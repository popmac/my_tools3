<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="tools-heading">サイトに登録されたアプリの一覧</h2>
      <%= link_to '登録されていないアプリのレビューを投稿', new_tool_path, class: 'btn btn-info btn-lg active' %>
    </div>
  </div>
  <div class="row">
    <% @tools.each do |tool| %>
    <div class="col-md-4">
      <div class="panel panel-default tool-panel">
        <a href="/tools/<%= tool.id %>"><h2><%= tool.name %> (<%= tool.reviews.count %>)</h2></a>
      </div>
    </div>
    <% end %>
  </div>
</div>
