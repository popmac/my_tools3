<!-- 1つのモーダルに複数の画像が入るパターン -->

<div class="container">
  <div class="row">
    <!-- 画面左側 -->
    <!-- ユーザー一覧の表示 -->
    <div class="col-md-3">
      <p class="lead">User一覧：<%= @users.count %>名</p>
      <div class="user-scroll-bar">
        <div class="list-group">
          <% @users.each do |user| %>
            <!-- 自分のアカウントとそれ以外を条件分岐, 自分のアカウントの背景を青色にする -->
            <% if current_user.id == user.id %>
              <!-- avatarが登録してあるかないかで条件分岐 -->
              <% if user.profile.avatar.present? %>
                <a href="/" class="list-group-item active"><%= image_tag user.profile.avatar %> <%= user.profile.nickname %>さん</a>
              <% else %>
                <a href="/" class="list-group-item active"><%= image_tag('no_image.png') %> <%= user.profile.nickname %>さん</a>
              <% end %>
            <!-- 自分のアカウント以外は背景が白になる -->
            <% else %>
              <!-- avatarが登録してあるかないかで条件分岐 -->
              <% if user.profile.avatar.present? %>
                <a href="/users/<%= user.id %>" class="list-group-item"><%= image_tag user.profile.avatar %> <%= user.profile.nickname %>さん</a>
              <% else %>
                <a href="/users/<%= user.id %>" class="list-group-item"><%= image_tag('no_image.png') %> <%= user.profile.nickname %>さん</a>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <!-- 画面右側 -->
    <!-- プロフィール,スクリーンショット,自己紹介,アプリとレビュー,の表示 -->
    <div class="col-md-9">
      <!-- プロフィールの表示 -->
      <div class="row">
        <div class="col-md-12">
          <%= link_to '他のユーザーページへGO!', user_path(current_user), class: 'btn btn-info btn-lg btn-block active' %>
          <p class="lead-profile">Nickname：<%= current_user.profile.nickname %>さん</p>
          <p class="lead-profile">Age：<%= current_user.profile.age %></p>
          <p class="lead-profile">Job：<%= current_user.profile.job %></p>
          <p class="lead-profile">投稿枚数：<%= current_user.photos.length %>枚</p>
          <p class="lead-profile">レビュー数：<%= current_user.reviews.length %></p>
        </div>
      </div>
      <!-- プロフィールが登録されていない場合 -->
      <% if current_user.profile.age == nil || current_user.profile.job == nil %>
      <div class="panel panel-default">
        <div class="panel-body">
          <p>プロフィールが登録されていません</p>
          <p><%= link_to '登録はこちらから', edit_profile_path(current_user.profile.id) %></p>
        </div>
      </div>
      <% end %>
      <!-- スクリーンショットの表示 -->
      <div class="row">
        <div class="col-md-12">
          <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <% if @photos.blank? %>
            <!-- スクリーンショットが登録されていない場合 -->
            <div class="panel panel-default">
              <div class="panel-body">
                <p>スクリーンショットが登録されていません</p>
                <p><%= link_to '登録はこちらから', new_user_photo_path(current_user) %></p>
              </div>
            </div>
            <% else %>
            <!-- スクリーンショットが登録されている場合 -->
            <!-- スクリーンショットの下のボタンの表示 -->
            <ol class="carousel-indicators">
              <% @photos.each_with_index do |photo, i| %>
              <li data-target="#carousel-example-generic" data-slide-to="<%= i %>" class=<%= "active" if i == 0 %>></li>
              <% end %>
            </ol>
            <!-- スクリーンショットの表示 -->
            <div class="carousel-inner">
              <% @photos.each_with_index do |photo, i| %>
              <div class="item <%= "active" if i == 0 %>">
                <a data-toggle="modal" data-target=".bs-example-modal-lg">
                  <img src="<%= photo.image %>" class="img-responsive">
                </a>
              </div>
              <% end %>
              <!-- 左右に移動するための矢印 -->
              <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
              </a>
              <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
              </a>
              <!-- モーダル -->
              <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
                <div class="modal-dialog modal-lg">
                  <div class="modal-content">
                    <% @photos.each_with_index do |photo, i| %>
                    <div class="modal-header">
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                      <h2 class="modal-title" id="myModalLabel"><%= i + 1 %>/<%= @photos.count %>枚目&nbsp;&nbsp;&nbsp;&nbsp;<%= l photo.created_at, format: :short %>に投稿</h2>
                    </div>
                    <div class="modal-body">
                      <img src="<%= photo.image %>" class="img-responsive">
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-primary" data-dismiss="modal" style="width: 100px">閉じる</button>
                    </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
      <!-- 自己紹介の表示 -->
      <div class="row">
        <div class="col-md-12">
          <div class="panel panel-default">
            <div class="panel-body">
              <% if @introduce.blank? %>
              <p>自己紹介が登録されていません</p>
              <p><%= link_to '登録はこちらから', edit_profile_path(current_user.profile.id) %></p>
              <% else %>
              <p><%= @introduce %></p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <!-- アプリとレビューの表示 -->
      <% if @reviews.blank? %>
      <div class="row">
        <div class="col-md-12">
          <div class="panel panel-default">
            <div class="panel-body">
              <p>アプリとレビューが登録されていません</p>
              <p><%= link_to '登録はこちらから', new_tool_path %></p>
            </div>
          </div>
        </div>
      </div>
      <% else %>
      <div class="row">
        <% @reviews.each do |review| %>
        <div class="col-md-6">
          <div class="panel panel-default">
            <div class="panel-heading">
              <a href="/tools/<%= review.tool_id %>"><h2><%= review.tool.name %></h2></a>
            </div>
            <div class="panel-body short_review">
              <p><%= review.review %></p>
              <p><%= link_to '詳細を見る', review_path(review) %></p>
              <p><%= link_to 'レビューを編集する', edit_review_path(review) %></p>
              <!-- likeボタン -->
              <div id="user-reviews-like-button<%= review.id %>">
                <%= render partial: "likes/like", locals: { like: review.likes.find_by(user_id: current_user.id), review: review } %>
              </div>
              <p>コメント:<%= review.comments.count %></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>
